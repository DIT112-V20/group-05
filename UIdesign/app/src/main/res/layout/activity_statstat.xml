<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#292E37"
    tools:context=".ManualActivity2">




    <EditText
        android:layout_width="257dp"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="60dp"
        android:text="Trip Statistics"
        android:gravity="center"
        android:textSize="37dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#E5BC9D2E"
        android:focusableInTouchMode="false"
        />







    <ImageButton

        android:id="@+id/back5"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="left"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/back"
        android:fontFamily="sans-serif-black"
        android:text="@string/Manual"
        android:textAllCaps="false"
        android:textColor="#BB070707"
        android:textSize="25sp" />


    <ImageView
        android:id="@+id/on"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="347dp"
        android:src="@drawable/on"
        />



    <Button
        android:id="@+id/onoff5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/nottransparent" />





    <Button
        android:id="@+id/estimatedTime"
        android:layout_width="378dp"
        android:layout_height="81dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/statslayout"
        android:rotation="0"
        android:textAlignment="textStart"
        android:text="Estimated Time: "
        android:fontFamily="sans-serif-black"
        android:textAllCaps="false"
        android:textColor="#BBFFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/actualTime"
        android:layout_width="378dp"
        android:layout_height="81dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/statslayout"
        android:rotation="0"
        android:textAlignment="textStart"
        android:text="Actual Time: "
        android:fontFamily="sans-serif-black"
        android:textAllCaps="false"
        android:textColor="#BBFFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/obstaclenumber"
        android:layout_width="378dp"
        android:layout_height="81dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/statslayout"
        android:rotation="0"
        android:textAlignment="textStart"
        android:text="Number of Obstacles: "
        android:fontFamily="sans-serif-black"
        android:textAllCaps="false"
        android:textColor="#BBFFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/extracost"
        android:layout_width="378dp"
        android:layout_height="81dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/statslayout"
        android:rotation="0"
        android:textAlignment="textStart"
        android:text="Extra Cost: "
        android:fontFamily="sans-serif-black"
        android:textAllCaps="false"
        android:textColor="#BBFFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/totalcost"
        android:layout_width="378dp"
        android:layout_height="81dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/statslayout"
        android:rotation="0"
        android:textAlignment="textStart"
        android:text="Total Cost: "
        android:fontFamily="sans-serif-black"
        android:textAllCaps="false"
        android:textColor="#BBFFFFFF"
        android:textSize="25dp" />

</RelativeLayout>