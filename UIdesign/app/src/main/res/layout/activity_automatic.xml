<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7292E37"
    tools:context=".ManualActivity2">



    <ImageButton
        android:id="@+id/back3"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="left"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/back"
        android:fontFamily="sans-serif-black"
        android:text="@string/Manual"
        android:textAllCaps="false"
        android:textColor="#BB070707"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/on"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="347dp"
        android:src="@drawable/on"
        />



    <Button
        android:id="@+id/onoff3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/nottransparent" />


    <Button
        android:id="@+id/switchtomanual"
        android:layout_width="378dp"
        android:layout_height="81dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="18dp"

        android:background="@drawable/colorchange"
        android:rotation="0"
        android:text="@string/toManual"
        android:textAllCaps="false"
        android:textColor="#BB070707"
        android:textSize="25dp" />




    />


</RelativeLayout>